@model IEnumerable<FootballLeague.Management.Models.Team>

@{
    ViewBag.Title = "Register";
}

<h2>Registration</h2>

<p>
    @Html.ActionLink("Register Team Here", "Create")
</p>
<p>
@Html.ActionLink("Generate Fixture","Create", "MatchFixtures")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TeamName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Place)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.HomeJerseyColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.AwayJerseyColor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GroundName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ContactNumber)
        </th>
